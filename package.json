{
  "name": "webpack-watch-files-plugin",
  "version": "1.0.2",
  "description": "Webpack watch files",
  "main": "lib/index.js",
  "scripts": {
    "start": "npm run build:watch",
    "build": "babel ./src -d ./lib",
    "build:watch": "babel ./src -wd ./lib",
    "lint": "standard",
    "mocha": "mocha --opts mocha.opts \"src/**/*.test.js\"",
    "mocha:watch": "mocha --opts mocha.opts --watch \"src/**/*.test.js\"",
    "test": "npm run lint && npm run mocha",
    "test:watch": "npm run lint && npm run mocha:watch",
    "prepublish": "npm run build"
  },
  "author": "Florent Detry <florent@fdetry.be> (http://fdetry.be/)",
  "license": "ISC",
  "dependencies": {
    "glob": "^7.1.3",
    "lodash": "^4.17.11"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.2.0",
    "mocha": "^6.1.1",
    "standard": "^12.0.1",
    "webpack": "^4.5.0"
  },
  "peerDependencies": {
    "webpack": "^3 || ^4"
  }
}
